@model WEBBAYU.Models.Buku

<h2>Tambah Buku</h2>

<form method="post" action="/Buku/Create">
    <div class="form-group">
        <label>Kode Buku</label>
        <input name="KodeBuku" class="form-control" />
    </div>
    <div class="form-group">
        <label>Judul Buku</label>
        <input name="Judul" class="form-control" />
    </div>
    <div class="form-group">
        <label>Pengarang</label>
        <input name="Pengarang" class="form-control" />
    </div>
    <div class="form-group">
        <label>Penerbit</label>
        <input name="Penerbit" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tahun Terbit</label>
        <input name="TahunTerbit" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Kategori</label>
        <input name="Kategori" class="form-control" />
    </div>
    <div class="form-group">
        <label>Jumlah Stok</label>
        <input name="JumlahStok" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Lokasi Rak</label>
        <input name="LokasiRak" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Simpan</button>
</form>
